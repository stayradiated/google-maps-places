{
  "name": "@stayradiated/google-maps-places",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "ava",
    "tidy": "xo --fix",
    "build": "rm -rf ./dist && tsc",
    "start": "node --loader ts-node/esm ./src/index.ts"
  },
  "keywords": [],
  "author": {
    "name": "George Czabania"
  },
  "license": "ISC",
  "dependencies": {
    "puppeteer-core": "18.0.5"
  },
  "devDependencies": {
    "@types/node": "18.7.23",
    "ava": "4.3.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "xo": "0.52.3"
  },
  "__comment": "The following configs are managed by `@stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
